<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- head joints -->
    <joint name="head_yaw_joint" type="revolute" >
        <parent link="body_link" />
        <child link="head_yaw_link" />
        <origin xyz="0 0 0.152" rpy="0 0 0" />
        <limit effort="1000" lower="${-3*PI/4}" upper="${3*PI/4}" velocity="1.0" />
        <axis xyz="0 0 1" />
    </joint>
    <joint name="head_pitch_joint" type="revolute" >
        <parent link="head_yaw_link" />
        <child link="head_pitch_link" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <limit effort="1000" lower="${-PI/2}" upper="${PI/2}" velocity="1.0" />
        <axis xyz="0 1 0" />
    </joint>


    <!-- head link -->
    <link name="head_yaw_link">
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
            </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://gk_description/meshes/STL/HEAD/head_yaw.stl" />
            </geometry>
            <material name="grey" />
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://gk_description/meshes/STL/HEAD/head_yaw.stl" />
            </geometry>
        </collision>
    </link>

    <link name="head_pitch_link">
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
            </inertial>
        <visual>
            <origin xyz="0.0235 0 0.006" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://gk_description/meshes/STL/HEAD/head_pitch.stl" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.0235 0 0.006" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://gk_description/meshes/STL/HEAD/head_pitch.stl" />
            </geometry>
        </collision>
    </link>


</robot>
